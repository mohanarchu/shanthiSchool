<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="false"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


 <LinearLayout
     android:orientation="vertical"
     android:weightSum="5.5"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <LinearLayout
         android:layout_gravity="center"
         android:orientation="horizontal"
         android:layout_weight="1.5"
         android:layout_width="match_parent"
         android:layout_height="0dp">
         <android.support.v7.widget.CardView
             android:background="@color/white"
             android:layout_margin="5dp"
             app:cardCornerRadius="5dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <LinearLayout
                 android:gravity="center"
                 android:weightSum="1"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <de.hdodenhof.circleimageview.CircleImageView
                     android:layout_weight="0.3"
                     xmlns:app="http://schemas.android.com/apk/res-auto"
                     android:id="@+id/profile_image"
                     android:layout_width="0dp"
                     android:layout_height="96dp"
                     android:src="@drawable/logo"
                     app:civ_border_width="2dp"
                     app:civ_border_color="#FF000000"/>

                 <LinearLayout
                     android:gravity="center"
                     android:weightSum="5"
                     android:orientation="vertical"
                     android:layout_weight="0.7"
                     android:layout_width="0dp"
                     android:layout_height="match_parent">

                     <TextView
                         android:id="@+id/studentname"
                         android:layout_weight="1"
                         android:layout_gravity="center"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:textStyle="bold"
                         android:textSize="18dp"
                         android:text="Student name"
                         />
                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_weight="1"
                         android:layout_width="match_parent"
                         android:layout_height="0dp">
                         <TextView
                             android:textSize="18dp"
                             android:text="Class : "
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content" />
                         <TextView
                             android:layout_marginLeft="8dp"
                             android:textSize="18dp"
                             android:text="10th"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content" />

                     </LinearLayout>


                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_weight="1"
                         android:layout_width="match_parent"
                         android:layout_height="0dp">
                         <TextView
                             android:textSize="18dp"
                             android:text="Roll no : "
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content" />
                         <TextView
                             android:layout_marginLeft="8dp"
                             android:textSize="18dp"
                             android:text="X-007"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content" />

                     </LinearLayout>
                 </LinearLayout>

             </LinearLayout>

         </android.support.v7.widget.CardView>

     </LinearLayout>
<LinearLayout
    android:layout_marginTop="3dp"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/flutter_blue"
            android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="2"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/ic_notification"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                />

        </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/calender"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/flutter_blue1"
            android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/ic_calendar_"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calender"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
     <LinearLayout
         android:weightSum="2"
         android:orientation="horizontal"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="0dp">

         <LinearLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">

             <android.support.v7.widget.CardView
                 android:id="@+id/performance"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp"
                 app:cardCornerRadius="4dp"
                 app:cardBackgroundColor="@color/flutter_blue1"
                 android:layout_height="match_parent">
             <LinearLayout

                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/ic_performance"
                     android:layout_width="50dp"
                     android:layout_height="50dp" />

                 <TextView
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textSize="18dp"
                     android:gravity="center"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Performance"
                     />
             </LinearLayout>
             </android.support.v7.widget.CardView>

         </LinearLayout>

         <LinearLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">

             <android.support.v7.widget.CardView
                 android:id="@+id/syllabus"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp"
                 app:cardCornerRadius="4dp"
                 app:cardBackgroundColor="@color/flutter_blue"
                 android:layout_height="match_parent">
             <LinearLayout
                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <ImageView
                     android:layout_marginLeft="5dp"
                     android:gravity="center"
                     android:layout_weight="1"
                     android:src="@drawable/ic_note_book"
                     android:layout_width="50dp"
                     android:layout_height="50dp" />

                 <TextView
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textSize="18dp"
                     android:gravity="center"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Syllabus"
                     />

             </LinearLayout>
             </android.support.v7.widget.CardView>

         </LinearLayout>

     </LinearLayout>
     <LinearLayout
         android:weightSum="2"
         android:orientation="horizontal"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="0dp">

         <LinearLayout

             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">

             <android.support.v7.widget.CardView
                 android:id="@+id/homework"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp"
                 app:cardCornerRadius="4dp"
                 app:cardBackgroundColor="@color/flutter_blue"
                 android:layout_height="match_parent">
             <LinearLayout
                 android:orientation="vertical"
                 android:gravity="center"
                 android:background="@color/flutter_blue"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/ic_open_book"
                     android:layout_width="50dp"
                     android:layout_height="50dp" />

                 <TextView
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textSize="18dp"
                     android:gravity="center"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Home Works"
                     />

             </LinearLayout>
             </android.support.v7.widget.CardView>


         </LinearLayout>

         <LinearLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">

             <android.support.v7.widget.CardView
                 android:id="@+id/invoice"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp"
                 app:cardCornerRadius="4dp"
                 app:cardBackgroundColor="@color/flutter_blue1"
                 android:layout_height="match_parent">
             <LinearLayout
                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_margin="5dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/ic_invoice"
                     android:layout_width="50dp"
                     android:layout_height="50dp" />

                 <TextView
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textSize="18dp"
                     android:gravity="center"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Invoices"
                     />

             </LinearLayout>
             </android.support.v7.widget.CardView>

         </LinearLayout>

     </LinearLayout>
     <LinearLayout
         android:weightSum="2"
         android:orientation="horizontal"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="0dp">

         <LinearLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">
             <android.support.v7.widget.CardView
                 android:id="@+id/memos"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp"
                 app:cardCornerRadius="4dp"
                 app:cardBackgroundColor="@color/flutter_blue1"
                 android:layout_height="match_parent">
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_margin="5dp"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/ic_book"
                     android:layout_width="50dp"
                     android:layout_height="50dp" />

                 <TextView
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textSize="18dp"
                     android:gravity="center"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Memos"
                     />

             </LinearLayout>
             </android.support.v7.widget.CardView>


         </LinearLayout>

         <LinearLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent">

             <android.support.v7.widget.CardView
                 android:id="@+id/settings"
                 android:layout_width="match_parent"
                 android:layout_margin="5dp"
                 app:cardCornerRadius="4dp"
                 app:cardBackgroundColor="@color/flutter_blue"
                 android:layout_height="match_parent">
             <LinearLayout
                 android:orientation="vertical"
                 android:gravity="center"
                 android:layout_margin="5dp"
                 android:background="@color/flutter_blue"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/ic_settings_gears"
                     android:layout_width="50dp"
                     android:layout_height="50dp" />

                 <TextView
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textSize="18dp"
                     android:gravity="center"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Settings"
                     />


             </LinearLayout>
             </android.support.v7.widget.CardView>

         </LinearLayout>

     </LinearLayout>





 </LinearLayout>



</LinearLayout>