<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".fragments.Charts">

    <LinearLayout

        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/student_name"

            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/flutter_blue"
            android:text="Student name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Class "
                    />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/myid"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="X-007"
                    />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Group name"
                    />
                <TextView
                    android:id="@+id/groups"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1-A"
                    />
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Term name "
                    />
                <TextView
                    android:id="@+id/termname"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1st Term"
                    />
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/charts_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="3"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/flutter_blue"
                android:id="@+id/cardview"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:shape="ring"
                app:cardCornerRadius="45dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/roundoff"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="600"
                        />
                    <View
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginRight="5dp"

                        />

                    <TextView
                        android:id="@+id/totalmark"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="700"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/flutter_blue"
            android:id="@+id/cardview1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:shape="ring"
            app:cardCornerRadius="45dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPA"
                    />
                <View
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginRight="5dp"

                    />

                <TextView
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.02"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/flutter_blue"
            android:id="@+id/cardview2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:shape="ring"
            app:cardCornerRadius="45dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

           <TextView
               android:textColor="@color/white"
               android:textStyle="bold"
               android:textSize="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Fail"
               />




            </LinearLayout>


        </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_weight="0.1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
<TextView

    android:textColor="@color/black"
    android:layout_marginLeft="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Total (%) :    "
    android:textStyle="bold"
    android:textSize="18dp"
    />

    <TextView
        android:textStyle="bold"
        android:id="@+id/percent"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Grade Point Average)"
        android:textSize="18dp"
        />

</LinearLayout>

</LinearLayout>