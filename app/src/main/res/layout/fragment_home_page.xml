                           android:layout_height="wrap_content" />

                       <TextView
                           android:id="@+id/memo_des"
                           android:layout_weight="1"
                           android:textSize="14dp"
                           android:layout_marginTop="5dp"
                           android:textStyle="bold"
                           android:text=""
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                       <TextView
