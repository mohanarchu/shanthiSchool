<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shape="http://schemas.android.com/tools">
    <LinearLayout
        android:gravity="end"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView

                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/flutter_blue"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                        <TextView

                            android:gravity="center"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/feename"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus Fees"
                        />
                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/ic_calendars"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                />
                            <TextView
                               android:id="@+id/due_date"
                                android:layout_marginLeft="5dp"
                                android:text="25/08/2017"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />






                        </LinearLayout>


                        <LinearLayout
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/ic_rupee_indian"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                />
                            <TextView
                                android:id="@+id/due_amount"
                                android:layout_marginLeft="5dp"
                                android:text="25/08/2017"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/unpaid"
                    android:visibility="gone"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">


                    <TextView

                        android:layout_marginRight="4dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:textColor="@color/red"
                        android:text="UnPaid"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <android.support.v7.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/paynow"
                        app:cardBackgroundColor="@color/flutter_blue"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <TextView

                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Pay Now"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </android.support.v7.widget.CardView>



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/paid"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">


                    <TextView

                        android:layout_marginRight="4dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:textColor="@color/green"
                        android:text="Paid"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <android.support.v7.widget.CardView
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/flutter_blue"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                        <TextView

                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Pay Now"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </android.support.v7.widget.CardView>



                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>








    </LinearLayout>
</LinearLayout>