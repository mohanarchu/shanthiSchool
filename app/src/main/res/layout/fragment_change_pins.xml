<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pinchange.ChangePins">

    <LinearLayout
        android:background="@color/white"
           android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            style="@style/LoginTextInputLayoutStyle"
            android:background="@color/white1"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:boxStrokeColor="@color/flutter_blue"
            android:layout_height="wrap_content">


            <EditText

                android:inputType="number"
                android:maxLength="6"
                android:id="@+id/enters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white1"
                android:gravity="center"
                android:hint="Enter new pin"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/flutter_blue" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            style="@style/LoginTextInputLayoutStyle"

            android:background="@color/white1"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:boxStrokeColor="@color/flutter_blue"
            android:layout_height="wrap_content">


            <EditText
                android:inputType="number"
                android:maxLength="6"
                android:id="@+id/reenters"
                android:textColor="@color/flutter_blue"
                android:hint="Re-enter pin"
                android:maxLines="1"
                android:singleLine="true"
                android:gravity="center"

                android:background="@color/white1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/updatePin"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/flutter_blue"
            android:layout_margin="10dp"
            android:layout_width="280dp"

            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="40dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="17dp"
                android:text="Update pin"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>



    </LinearLayout>


</LinearLayout>