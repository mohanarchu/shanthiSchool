<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="New Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/flutter_blue"
                android:text="DISPLAY NAME"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <EditText
                android:hint="Enter name "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/flutter_blue"
                android:text="CARD HOLDER NAME"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <EditText
                android:hint="Enter name "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/flutter_blue"
                android:text="CARD NUMBER"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/cardnumber"
                android:inputType="number"
                android:hint="Enter number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/flutter_blue"
                android:text="Valid thru"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <com.video.aashi.myapplication.adapters.MyEditText
                android:id="@+id/selectyear"
                android:inputType="number"
                android:hint="01 / 2020"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>

    </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/flutter_blue"
                        android:text="CVV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <EditText
                        android:id="@+id/cvv"
                        android:inputType="number"
                        android:hint="123"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/close"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/flutter_blue"
            android:layout_width="match_parent"
            android:layout_height="60dp">
           <TextView
               android:textColor="@color/white"
               android:gravity="center"
               android:textSize="20dp"
               android:textStyle="bold"
               android:text="ADD CARD"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />


        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v7.widget.CardView>