<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tx="http://schemas.android.com/apk/res-auto"
    package="com.video.aashi.shaanthischool">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:name="com.video.aashi.shaanthischool.adapters.MyApp"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@drawable/logos"
        android:label="@string/app_name"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.video.aashi.shaanthischool.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.video.aashi.shaanthischool.MainActivity" />
        <activity android:name="com.video.aashi.shaanthischool.Payment" />
        <activity android:name="com.video.aashi.shaanthischool.Myclass" />
        <activity
            android:name="com.video.aashi.shaanthischool.NoticeDetails"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name="com.video.aashi.shaanthischool.adapters.Successful" />
        <activity android:name="com.video.aashi.shaanthischool.ForgetPass" />
        <activity android:name="com.video.aashi.shaanthischool.Navigation" />
        <activity android:name="com.video.aashi.shaanthischool.Login" />
        <activity android:name="com.video.aashi.shaanthischool.BarScanner" />
        <activity android:name="com.video.aashi.shaanthischool.PinLogin" />
        <activity android:name="com.video.aashi.shaanthischool.pinchange.ChangePin" />
        <activity android:name="com.video.aashi.shaanthischool.fragments.studentlist.StudentList" />
        <activity android:name="com.video.aashi.shaanthischool.LoginAttempt"></activity>
    </application>

</manifest>